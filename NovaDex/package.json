    "hardhat": "^3.1.3",
    "typescript": "~5.8.0",
    "viem": "^2.44.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "chai": "^6.2.2",
    "ethers": "^6.16.0",
    "mocha": "^11.7.5"
  }
